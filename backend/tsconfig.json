{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}